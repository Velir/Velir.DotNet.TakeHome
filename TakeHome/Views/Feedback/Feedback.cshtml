@model TakeHome.Models.FeedbackForm
@{
    ViewBag.Title = "Feedback";
}
<h2>@ViewBag.Title</h2>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <p>
                If you are interested in providing feedback to us, please fill out the form on this page. We look forward to hearing what you have to say.
            </p>
            <p>
                If you have other concerns, you may reach us via our <a href="/Home/Contact">contact page</a>.
            </p>
            <div class="form-error alert alert-warning">
                <P>
                    It looks like there is an issue with your submission. Please correct the following fields:
                </P>
                <ul>
                </ul>
            </div>
        </div>
        <div class="form col-xs-12 col-md-6">
            @using (Html.BeginForm("Feedback", "Feedback", FormMethod.Post))
            {
                /* form here */
                <fieldset>
                    <div class="editor-label form-group">
                        @Html.LabelFor(m => m.FirstName)
                    </div>
                    <div class="editor-field form-group">
                        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="editor-validation alert alert-danger">
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.LastName)
                    </div>
                    <div class="editor-field form-group">
                        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="editor-validation alert alert-danger">
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.Email)
                    </div>
                    <div class="editor-field form-group">
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="editor-validation alert alert-danger">
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.Feedback)
                    </div>
                    <div class="editor-field form-group">
                        @Html.EditorFor(m => m.Feedback, new { htmlAttributes = new { @class = "form-control" } })
                        <div class="editor-validation alert alert-danger">
                            @Html.ValidationMessageFor(m => m.Feedback)
                        </div>
                    </div>
                    <div class="masthead-button-wrapper">
                        <input class="btn btn-warning" type="submit" value="Submit" />
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>